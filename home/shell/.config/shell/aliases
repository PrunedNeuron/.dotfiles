#!/usr/bin/env sh

# Aliases

# Services
alias reloadde="plasmashell --replace && kwin_x11 --replace  >/dev/null 2>&1"
alias reloaddns="sudo systemctl restart dnscrypt-proxy pihole-FTL NetworkManager"

# Arch package management
alias yays="yay -S"
alias yayy="yay -S --needed --noconfirm" # Install
alias yayr="yay -Rns" # Uninstall / Remove completely / Purge
alias yayrr="yay -Rns --noconfirm" # Uninstall / Remove completely / Purge non-interactively
alias yayfd="yay -Slq | fzf --multi --preview 'yay -Si {1}' | xargs -ro yay -S"
alias yayrm="yay -Qq | fzf --multi --preview 'yay -Qi {1}' | xargs -ro sudo yay -Rns"
alias y="yay"
alias ys="yays"
alias yy="yayy"
alias yr="yayr"
alias yrr="yayrr"
alias yfd="yayfd"
alias yrm="yayrm"

# Text
alias cpy="xsel -bi" # Copy to clipboard
alias pst="xsel -bo" # Paste from clipboard

# Fonts
alias fontcc='fc-cache -f'
alias fontm='fc-match'

# Utility
alias now="date +\"%r\""
alias today="date +%F"
alias fastping="ping -c 100 -s.2"
alias open="xdg-open 2>/dev/null"

# Misc
alias sudokate="SUDO_EDITOR=kate sudoedit" # launch kate as root
alias refreshmirrors="sudo reflector --latest 200 --protocol https --sort rate --fastest 50 --save /etc/pacman.d/mirrorlist > /dev/null 2>&1"

# Shortcuts
alias ~="cd $HOME"
alias conf="cd $CONFIG"
alias fjson="python -m json.tool"

# exa
alias exa="exa --icons --color=auto"
alias exal="exa --long --icons --color=auto"
alias exaa="exa --all --icons --color=auto"
alias exaal="exa --all --long --icons --color=auto"

# Safety
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias ln="ln -i"

# TeX
# TeX Live Package Manager (pacman integration)
alias texpac="tllocalmgr"

# Config edit shortcuts
alias nvimrc='nvim ~/.config/nvim/init.vim'
alias zshrc='nvim ~/.zshrc'
alias zprofile='nvim ~/.zprofile'
alias zshenv='nvim ~/.zshenv'
alias foxrc='nvim ~/mozilla/firefox/nightly/user.js'
alias yayrc='nvim ~/.config/yay/config.json'

# Text editing
alias snvim="sudo nvim"
alias svim="sudo vim"
alias svi="sudo vi"
alias snano="sudo nano"
