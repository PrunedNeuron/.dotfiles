# yt-dlp configuration

# Force IPv4
--force-ipv4

# Prefer ffmpeg for HLS
--hls-prefer-ffmpeg

# Do not copy the mtime
--no-mtime

# Restrict to shorter file names
--restrict-filenames

# Add metadata
#--embed-metadata

--parse-metadata "title:%(title)s"
--parse-metadata "webpage_url:(?s)(?P<meta_comment>.+)"
--add-metadata

# Geolocation
--geo-bypass-country US

# Overwrite if required
--force-overwrites

# Show progress bar
--progress
--newline

# Suppress logs
--quiet
--verbose

# Suppress warnings
--no-warnings

# Ignore no formats error
--ignore-no-formats-error

# Use aria2c
--downloader aria2c
--downloader-args aria2c:"--no-conf --conf-path=$CONFDIR/aria2/aria2.youtube.conf"
