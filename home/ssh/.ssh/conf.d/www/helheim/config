# SSH configuration for Helheim (Hosts administered by me)

# -> DigitalOcean Droplet
Host droplet
	Hostname ssh.ayushm.dev
	User ayush
	AddKeysToAgent yes
	IdentityFile ~/.ssh/keys/www/helheim/id_ed25519_droplet

# -> DigitalOcean Droplet Root
Host droplet-root
	Hostname ssh.ayushm.dev
	User root
	AddKeysToAgent yes
	IdentityFile ~/.ssh/keys/www/helheim/id_ed25519_droplet

# -> Oracle Cloud
Host oc
    Hostname 152.67.88.20
    User ubuntu
    AddKeysToAgent yes
    IdentityFile ~/.ssh/keys/www/helheim/id_ed25519_oracle_cloud
