# SSH Configuration for VCS service providers

# -> Github
Host github.com
	HostName ssh.github.com
	Port 443
	User git
	IdentityFile ~/.ssh/keys/vcs/id_ed25519_github

# -> Bitbucket
Host bitbucket.org
	HostName bitbucket.org
	User git
	AddKeysToAgent yes
	IdentityFile ~/.ssh/keys/vcs/id_ed25519_bitbucket

# -> Gitlab
Host gitlab.com
	Hostname altssh.gitlab.com
	User git
	Port 443
	AddKeysToAgent yes
	IdentityFile ~/.ssh/keys/vcs/id_ed25519_gitlab

# -> Codeberg
Host codeberg.org
	Hostname codeberg.org
	User git
	AddKeysToAgent yes
	IdentityFile ~/.ssh/keys/vcs/id_ed25519_codeberg
