# wget config

# Macintosh/Chrome user agent
user_agent = Mozilla/5.0 (Macintosh; Intel Mac OS X 12_5) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/103.0.0.0 Safari/537.36

# Use the filename in the header
content_disposition = on

# Add a `.html` extension to `text/html` or `application/xhtml+xml` files that lack one
adjust_extension = on

# Ignore `robots.txt` and `<meta name=robots content=nofollow>`
robots = off

# Print server response
server_response = on

# Retry even when the connection was refused
retry_connrefused = on

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Creates directory structure by force even for a single retrieval
dirstruct = on

# Use the server-provided last modification date, if available
timestamping = on

# Do not go up in the directory structure during recursive download
no_parent = on

# Retry a few times when a download fails, but don't overdo it. (Default is 20!)
tries = 3

