# wget config

# Use the filename in the header
content_disposition = on

# Save HTML/CSS with proper extensions
adjust_extension = on

# Don't download robots.txt
robots = off

# Print server response
server_response = on

# Retry a few times when a download fails, but donâ€™t overdo it. (The default is 20!)
tries = 3

# Retry even when the connection was refused
retry_connrefused = on

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Macintosh/Chrome user agent
user_agent = Mozilla/5.0 (Macintosh; Intel Mac OS X 12_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/101.0.4951.67 Safari/537.36

