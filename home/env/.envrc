# ~/.envrc - User created environment configuration

# Configuration variables

# Installation / Source / Home directories
PLATFORM_TOOLS_BIN="/opt/android-sdk/platform-tools"
#YARN_BIN=$(yarn global bin)
GOBIN="$HOME/go/bin"
CARGOBIN="$HOME/.cargo/bin"
USERBIN="$HOME/.local/bin"
DETABIN="$HOME/.deta/bin"
CUDABIN="/opt/cuda/bin"
GEMBIN="$HOME/.local/share/gem/ruby/3.0.0/bin"
RUSTC_WRAPPER=sccache

paths=(\
    "$PLATFORM_TOOLS_BIN" \
    "$YARN_BIN" \
    "$GOBIN" \
    "$CARGOBIN" \
    "$USERBIN" \
    "$CUDABIN" \
    "$DETABIN" \
    "$GEMBIN"
)

# Other paths
NVIM_DIR="$HOME/.config/nvim"
TEXMFHOME="$HOME/.texmf" # TeX Live path (originally ~/textmf)
RC="$HOME/rc"

# rc
NVIMRC="$NVIM_DIR/init.vim"

## Configuration / Settings

# FNM
NODEVER='16.14.0'

